{
    "name": "ride-along",
    "version": "0.0.0",
    "license": "GPL-3.0",
    "scripts": {
        "lint": "tslint --project tsconfig.json",
        "build": "rm -rf build && NODE_ENV=production webpack",
        "serve": "webpack-dev-server",
        "serve:build": "cd build && http-server",
        "start": "if which yarn > /dev/null; then yarn run build && yarn run serve:build; else npm run build && npm run serve:build; fi",
        "deploy": "aws s3 cp build s3://publications-admin-site --recursive --region \"us-east-2\""
    },
    "dependencies": {
        "@types/react": "^15.0.6",
        "@types/react-router": "^3.0.2",
        "@types/whatwg-fetch": "^0.0.33",
        "es6-promise": "^4.0.5",
        "preact": "^7.1.0",
        "preact-compat": "^3.10.0",
        "react-bem-helper": "^1.2.0",
        "react-router": "^3.0.2",
        "whatwg-fetch": "^2.0.1"
    },
    "devDependencies": {
        "babel-core": "^6.22.1",
        "babel-loader": "^6.2.10",
        "babel-plugin-transform-object-rest-spread": "^6.20.2",
        "babel-preset-es2015": "^6.18.0",
        "babel-register": "^6.18.0",
        "css-loader": "^0.26.1",
        "extract-text-webpack-plugin": "beta",
        "html-webpack-plugin": "^2.26.0",
        "http-server": "^0.9.0",
        "inline-manifest-webpack-plugin": "^3.0.1",
        "node-sass": "^4.3.0",
        "optimize-css-assets-webpack-plugin": "^1.3.0",
        "react": "^15.4.2",
        "react-dom": "^15.4.2",
        "sass-loader": "^4.1.1",
        "style-loader": "^0.13.1",
        "ts-loader": "^1.3.3",
        "tslint": "^4.3.1",
        "tslint-loader": "^3.3.0",
        "tslint-react": "^2.3.0",
        "typescript": "^2.1.5",
        "webpack": "^2.2.1",
        "webpack-dev-server": "^2.3.0"
    }
}
